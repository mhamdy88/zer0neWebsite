    Layout = "_Layout";
}
<style>
    .header {
        padding-bottom: 0px;
    }

    .fixed-bg {
        background-image: url("/images/_img.jpg");
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        height: 590px;
        z-index: -1;
        background-size: 100%;
        background-position: top;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .HeaderText {
        position: absolute;
        width: 100%;
        max-width: 400px;
        top: 40%;
        color: white;
        padding: 32px;
        /* background: gray; */
    }

    .overlayColor {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        background: rgba(134, 93, 93, 0.62);
        opacity: .4;
    }
</style>
<div class="container" style="max-width:100%;padding:0px;">
    <div class="header">
        <div class="banner fixed-bg">
            <div class="overlayColor"></div>
            @*<img src="~/images/img.jpg" />*@
            <div class="HeaderText">
                <h1 class="">تطبيقات الجوال</h1>
                <p class="">تطبيقات ذكية معدة خصيصا لزيادة الانتاجية, تحسين خدمة العملاء, و تطوير أداء الأعمال.</p>
            </div>
        </div>
    </div>
</div>

